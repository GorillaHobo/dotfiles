super + v
	st -c "astronvim" -e nvim


super + g
	qutebrowser
super + shift + g
	qutebrowser ":open -p"

# emacs
super + ctrl + d
	emacs
super + d
	emacsclient -c -n

# file manager
super + p
	pcmanfm

# volume control suing amixer

# super + bracketright
# 	volume-control "increase"
# super + bracketleft
# 	volume-control "decrease"

XF86MonBrightnessUp
	light-control "increase"
XF86MonBrightnessDown
	light-control "decrease"

# super + ctrl + Prior 
# 	light-control "increase"
# super + ctrl + Next
# 	light-control "decrease"

XF86AudioRaiseVolume
	volume-control "increase"
XF86AudioLowerVolume
	volume-control "decrease"

#
# XF86BrightnessUp
	# amixer set Master 10%-

# mpc music control
XF86AudioStop
	mpc stop
XF86AudioPlay
	mpc toggle
XF86AudioNext
	mpc next
XF86AudioPrev
	mpc prev

