#
# wm independent hotkeys
#

# terminal launcher
# super + Return
	# st

# program launcher
super + shift + Return
	dmenu_run -bw 3 -c -l 20 -i

super + ctrl + Return
	alacritty

# make sxhkd reload its configuration files:
super + ctrl + Escape
	pkill -USR1 -x sxhkd && dunstify -u low -r  "656" "Sxhkd reloaded."

super + ctrl + x
	reloadx && notify-send -u low "Xresources reloaded"

super + alt + q
	restart_dwm

super + F6
	dunst_test
super + F7
	st -c "alsamixer" -e alsamixer
super + F8
	  wallpaper # select wallpaper script
super + F9
	mopidy & ; \
	st -c "ncmpcpp" -e ncmpcpp
super + ctrl + F9
	killall -q mopidy && killall -q ncmpcpp && notify-send "Mopidy" "Closed"
super + F10
	mpd ; \
	st -c "ncmpcpp" -e ncmpcpp
super + ctrl + F10
	killall -q mpd && killall -q ncmpcpp && notify-send "MPD" "Closed"
super + F11
	alarm &
super + F12
	usb_mount
super + ctrl + F12
	usb_unmount
XF86Display
	monitor_dmenu

# launch HTOP
ctrl + alt + Delete
	st -c "gotop" -e gotop -l minimal
#
# launch applications
#

# vivaldi
# super + v
# 	vivaldi-stable
# super + shift + v
# 	vivaldi-stable --incognito
#

# brave
# super + v
# 	brave
# super + shift + v
# 	brave --incognito

super + n
	qutebrowser
super + shift + n
	exec qutebrowser ":open -p"

# emacs
super + shift + d
	emacs
super + d
	emacsclient -c -n

# file manager
super + e
	st -e lf

# volume control suing amixer
super + alt + Prior
	volume-control "increase"
super + alt + Next
	volume-control "decrease"

super + ctrl + Prior 
	light-control "increase"
super + ctrl + Next
	light-control "decrease"
# XF86AudioRaiseVolume
	# amixer set Master 10%+
# XF86AudioLowerVolume
	# amixer set Master 10%-
# XF86BrightnessUp
	# amixer set Master 10%-

# mpc music control
XF86AudioStop
	mpc stop
XF86AudioPlay
	mpc toggle
XF86AudioNext
	mpc next
XF86AudioPrev
	mpc prev

# XF86MonBrightnessUp
	# fish ~/.scripts/brightness_control/./brightness_up.sh 0.1
# XF86MonBrightnessDown
	# fish ~/.scripts/brightness_control/./brightness_down.sh 0.1

#
# screen capture using maim
#

# take screenshot at ~/Storage/Pictures/Screenshots/
# take desktop screenshot
Print
	maim_screenshot 1
# take Window screenshot
shift + Print
	maim_screenshot 2
# take Selected screenshot
shift + ctrl + Print
	maim_screenshot 3
# get rgb using maim
shift + ctrl + alt + Print
	get_rgb

super + ctrl + shift + t
	change_theme
