#
# wm independent hotkeys
#

# terminal launcher
super + Return
	st

# program launcher
super + o
	dmenu_run -bw 3 -c -l 20 -i

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd && notify-send "Sxhkd reloaded."

super + ctrl + x
	reloadx && notify-send -u low "Xresources reloaded"

F6
	dunst_test
F7
	st -c "alsamixer" -e alsamixer
F8
	  wallpaper # select wallpaper script
F9
	mopidy & ; \
	st -c "ncmpcpp" -e ncmpcpp
ctrl + F9
	killall -q mopidy && killall -q ncmpcpp && notify-send "Mopidy" "Closed"
F10
	mpd ; \
	st -c "ncmpcpp" -e ncmpcpp
ctrl + F10
	killall -q mpd && killall -q ncmpcpp && notify-send "MPD" "Closed"
F11
	alarm &
F12
	usb_mount
ctrl + F12
	usb_unmount
XF86Display
	monitor_dmenu

# launch HTOP
ctrl + alt + Delete
	st -c "gotop" -e gotop -l minimal
#
# launch applications
#

# vivaldi
super + v
	vivaldi-stable
super + shift + v
	vivaldi-stable --incognito

# emacs
super + shift + d
	emacs

# file manager
super + e
	st -e lf

# volume control suing amixer
super + alt + Prior
	amixer -q set Master 5%+ 
super + alt + Next
 	amixer -q set Master 5%-
# XF86AudioRaiseVolume
	# amixer set Master 10%+
# XF86AudioLowerVolume
	# amixer set Master 10%-
# XF86BrightnessUp
	# amixer set Master 10%-

# mpc music control
XF86AudioStop
	mpc stop
XF86AudioPlay
	mpc toggle
XF86AudioNext
	mpc next
XF86AudioPrev
	mpc prev

# XF86MonBrightnessUp
	# fish ~/.scripts/brightness_control/./brightness_up.sh 0.1
# XF86MonBrightnessDown
	# fish ~/.scripts/brightness_control/./brightness_down.sh 0.1

#
# screen capture using maim
#

# take screenshot at ~/Storage/Pictures/Screenshots/
# take desktop screenshot
Print
	maim_screenshot 1
# take Window screenshot
shift + Print
	maim_screenshot 2
# take Selected screenshot
shift + ctrl + Print
	maim_screenshot 3
# get rgb using maim
shift + ctrl + alt + Print
	get_rgb



