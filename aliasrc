# alises

# Launch neovim
alias v="nvim"

# fish change modes
# alias \
# 	vf="fish_vi_key_bindings" \
# 	nf="fish_default_key_bindings" \

# Neovim configuration
alias \
	vz="nvim ~/.config/zsh/.zshrc" \
	vfish="nvim ~/.config/fish/config.fish" \
	vbsp="nvim ~/.config/bspwm/bspwmrc" \
	vsx="nvim ~/.config/sxhkd/sxhkdrc" \
	vala="nvim ~/.config/alacritty/alacritty.yml" \
	vvim="nvim ~/.config/nvim/init.vim" \
	valias="nvim ~/.config/aliasrc" \
	vlf="nvim ~/.config/lf/lfrc" \

# nnn aliases 
alias \
	n="nnn" \
	ndown="nnn ~/Storage/Downloads/" \
	nc="nnn ~/.config/" \
	ns="nnn ~/Storage/" \
	ntor="nnn ~/Storage/Downloads/Torrents/" \
	nd="nnn ~/Documents/" \
	ndocs="nnn ~/Storage/Documents/" \
	nex="nnn /run/media/tony/" \
	npoly="nnn ~/.config/polybar/" \
	nmtp="nnn ~/.mtp/" \

# lf aliases 
alias \
	lf="lf" \
	lfdown="lf ~/Storage/Downloads/" \
	lfc="lf ~/.config/" \
	lfs="lf ~/Storage/" \
	lftor="lf ~/Storage/Downloads/Torrents/" \
	lfd="lf ~/Documents/" \
	lfdocs="lf ~/Storage/Documents/" \
	yamaha="lf ~/Storage/Documents/Yamaha/" \
	lfex="lf /run/media/tony/" \
	lfpoly="lf ~/.config/polybar/" \
	lfmtp="lf ~/.mtp/" \

# emacs aliases
alias personal="emacs ~/Storage/Documents/personal/todos.org"

# mount usb
alias usbmount="udisksctl mount -b /dev/sdc1"
alias usbunmount="udisksctl unmount -b /dev/sdc1"

# mount phone mtp
alias mtpmount="jmtpfs ~/mtp"
alias mtpunmount="fusermount -u ~/.mtp"

# click on point to get RGB value
alias getrgb="maim -st 0 | convert - -resize 1x1\! -format '%[pixel:p{0,0}]' info:-"

# start factorio
alias factorio="sh ~/Storage/Games/Factorio/Factorio/run.sh"

# change random wallpaper
alias wallpaper="feh --bg-fill --randomize ~/Storage/Downloads/Wallpapers/"

# Colorize commands if possible
alias \
	ls="ls -hN --color=auto --group-directories-first" \
	la="ls -ahN --color=auto --group-directories-first" \
	grep="grep --color=auto" \

# verbose commands
alias \
	cp="cp -iv" \
	mv="mv -iv" \
	rm="rm -vI" \
	mkd="mkdir -pv" \
	yt="youtube-dl --add-metadata -i" \
	yta="yt -x -f bestaudio/best" \
	ffmpeg="ffmpeg -hide_banner"

# sxiv open all in directory
alias \
	sxiv="~/.scripts/rifle-sxiv.sh"
